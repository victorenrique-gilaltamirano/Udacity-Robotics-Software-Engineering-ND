<?xml version='1.0'?>

<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

<!-- Plugin Add -->
<xacro:include filename="$(find my_robot)/urdf/my_robot.gazebo" />

  <link name="robot_footprint"></link>

  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="chassis" />
  </joint>

  <link name='chassis'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="8.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <cylinder radius=".2" length=".1"/>
      </geometry>
    </collision>

    <visual name='chassis_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <cylinder radius=".2" length=".1"/>
      </geometry>
    </visual>




    <collision name='front_caster_collision'>
      <origin xyz="0.15 0 -0.059" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </collision>

    <visual name='front_caster_visual'>
      <origin xyz="0.15 0 -0.059" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </visual>

  </link>

<!-- right wheel link -->
  <link name="right_wheel">
   <visual>
    <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
    <geometry>
      <cylinder length="0.05" radius="0.11"/>
    </geometry>
   </visual>
   <collision>
    <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
     <geometry>
      <cylinder length="0.05" radius="0.11"/>
     </geometry>
  </collision>
  <inertial>
    <mass value="2"/>

    <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
   </inertial>
  </link>
<!-- right wheel joint -->
  <joint type="continuous" name="right_wheel_hinge">
    <origin xyz="-0.15 -0.25 0" rpy="0 0 0"/>
    <child link="right_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>
<!-- left wheel link -->
  <link name="left_wheel">
   <visual>
    <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
    <geometry>
      <cylinder length="0.05" radius="0.11"/>
    </geometry>
   </visual>
   <collision>
    <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
     <geometry>
      <cylinder length="0.05" radius="0.11"/>
     </geometry>
  </collision>
  <inertial>
    <mass value="2"/>
    <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
   </inertial>
  </link>
<!-- left wheel joint -->
  <joint type="continuous" name="left_wheel_hinge">
    <origin xyz="-0.15 0.25 0" rpy="0 0 0"/>
    <child link="left_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>


<!-- camera link-->
  <link name="camera">
   <visual>
    <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
    <geometry>
      <box size=".05 .05 .05"/>
    </geometry>
   </visual>
   <collision>
    <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
     <geometry>
      <box size=".05 .05 .05"/>
     </geometry>
  </collision>
  <inertial>
    <mass value="0.1"/>

    <inertia ixx="1e-6" ixy="0.0" ixz="0.0" iyy="1e-6" iyz="0.0" izz="1e-6"/>
   </inertial>
  </link>
<!-- camera joint -->
  <joint type="fixed" name="camera_joint">
    <origin xyz="0.2 0 0" rpy="0 0 0"/>
    <child link="camera"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0"/>
  </joint>
<!-- lidar link-->
  <link name="hokuyo">
   <visual>
    <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
    <geometry>
      <mesh filename="package://my_robot/meshes/hokuyo.dae"/>
    </geometry>
   </visual>
   <collision>
    <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
     <geometry>
      <box size=".1 .1 .1"/>
     </geometry>
  </collision>
  <inertial>
    <mass value="1e-5"/>
    <inertia ixx="1e-6" ixy="0.0" ixz="0.0" iyy="1e-6" iyz="0.0" izz="1e-6"/>
   </inertial>
  </link>
<!-- lidar joint -->
  <joint type="fixed" name="hokuyo_joint">
    <origin xyz="0.17 0 0.1" rpy="0 0 0"/>
    <child link="hokuyo"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0"/>
  </joint>

<!-- box link-->
  <link name="box_chassis">
   <visual>
    <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
    <geometry>
      <box size=".2 .43 .1"/>
    </geometry>
   </visual>
   <collision>
    <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
     <geometry>
      <box size=".2 .43 .1"/>
     </geometry>
  </collision>
  <inertial>
    <mass value="0.1"/>

    <inertia ixx="1e-6" ixy="0.0" ixz="0.0" iyy="1e-6" iyz="0.0" izz="1e-6"/>
   </inertial>
  </link>
<!-- box joint -->
  <joint type="fixed" name="box_chassis_joint">
    <origin xyz="-0.15 0 0" rpy="0 0 0"/>
    <child link="box_chassis"/>
    <parent link="chassis"/>
    <axis xyz="0 0 0"/>
  </joint>

<!-- Color -->
  <gazebo reference="left_wheel">
    <material>Gazebo/Blue</material>
  </gazebo>

  <gazebo reference="right_wheel">
    <material>Gazebo/Blue</material>
  </gazebo>

  <gazebo reference="chassis">
    <material>Gazebo/Red</material>
  </gazebo>

  <gazebo reference="camera">
    <material>Gazebo/Yellow</material>
  </gazebo>

  <gazebo reference="box_chassis">
   <material>Gazebo/Red</material>
  </gazebo>

</robot>

